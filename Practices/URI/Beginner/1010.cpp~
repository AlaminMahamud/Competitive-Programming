#include <iostream>
#include <string>
#include <iomanip>

using std::cin;
using std::cout;
using std::endl;
using std::string;
using std::fixed;
using std::setprecision;

int main(int argc, char *argv[]) {
  string ss;
  cin >> ss;
  double m, s;
  cin >> m >> s;
  cout << fixed << setprecision(2);
  cout << "TOTAL = R$ " << m + (s * .15) << endl;
  return 0;
}
